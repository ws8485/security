<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- 로그 파일 기본 경로 및 이름 설정 -->
    <springProperty scope="context" name="LOG_PATH" source="LOG_PATH" defaultValue="logs" />
    <springProperty scope="context" name="LOG_FILE_NAME" source="LOG_FILE_NAME" defaultValue="application" />

    <!-- 콘솔 출력 패턴 -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [traceId=%X{traceId}] [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- 파일 출력 패턴 -->
    <property name="FILE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [traceId=%X{traceId}] %-5level [%thread] %logger{36} - %msg%n"/>

    <!-- 콘솔 로그 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 파일 로그 설정 (하루 단위 롤링) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE_NAME}.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME}-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Hibernate SQL 로그 출력 -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql" level="TRACE"/>
    <logger name="org.hibernate.orm.jdbc.bind" level="TRACE"/>

    <!-- Spring 기본 로그 레벨 -->
    <logger name="org.springframework" level="INFO"/>

    <!-- 패키지별 사용자 로그 (예: com.example) -->
    <logger name="com.example" level="DEBUG"/>

    <!-- 루트 로거 설정 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
